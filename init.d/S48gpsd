#!/usr/bin/bash
#
# gpsd
#

NAME=gpsd
EXEC=$(which $NAME)
DEVICE="/dev/ttyS1"
PIDFILE=/run/$NAME.pid
SOCKFILE=/run/$NAME.sock

[ -x "$EXEC" ] || exit 0
[ -r "/etc/default/$NAME" ] && . "/etc/default/$NAME"
[ "x$GPSD_DISABLE" = "xyes" ] && exit 0

. /usr/share/rcinit/functions

check_root

start() {
	log_start $NAME
	ln -sf $DEVICE /dev/gps0
	start-stop-daemon -S -q -p $PIDFILE --exec $EXEC -- -P $PIDFILE -n -F $SOCKFILE /dev/gps0
	check_status
}

stop() {
	log_stop $NAME
	start-stop-daemon -K --remove-pidfile -q -p $PIDFILE
	check_status
}

restart() {
	stop
	sleep 1
	start
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|reload)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}" >&2
	exit 1
esac
