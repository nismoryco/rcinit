#!/bin/sh
#
# crond
#

NAME="crond"
EXEC=$(which $NAME)
SPOOLDIR="/var/spool/cron/crontabs"
PIDFILE="/run/crond.pid"

[ -x "$EXEC" ] || exit 0

. /etc/init.d/functions

check_root

start() {
	printf "Starting $NAME ... "
	install -d -m 0700 $SPOOLDIR
	$EXEC > /dev/null 2>&1
	check_status
}

stop() {
	printf "Stopping $NAME ... "
	if [ ! -r "$PIDFILE" ] ; then
		status_fail
		exit 1
	fi
	killall $NAME 2> /dev/null
	check_status
	# crond not remove pid file
	rm -f "$PIDFILE"
}

restart() {
	stop
	sleep 1
	start
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|reload)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}" >&2
	exit 1
esac
