[Unit]
Description=System Logging Service
Requires=syslog.socket

[Service]
EnvironmentFile=-/etc/default/syslogd
ExecStart=/usr/sbin/syslogd -m 0 -F -p /run/systemd/journal/syslog $SYSLOGD_OPTS
StandardOutput=null
Restart=on-failure
KillMode=process

[Install]
WantedBy=multi-user.target
Alias=syslog.service
